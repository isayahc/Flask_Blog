{% extends "layout.jinja" %}
{% block content %}
    {% for post in posts %}
        <article class="media content-section">
          <img class="rounded-circle article-img" src="{{ post.author.profile_pic}}">
          <div class="media-body">
            <div class="article-metadata">
              <a class="mr-2" href="{{ post.author.id_ }}">{{ post.author.name }}</a>
              <small class="text-muted">{{ post.date_posted.strftime('%Y-%m-%d') }}</small>
            </div>
            <h2><a class="article-title" href="{{url_for('post.single_post', post_id=post.id_)}}">{{ post.title }}</a></h2>
            <p class="article-content">{{ post.content }}</p>
          </div>
        </article>
    {% endfor %}
{% endblock content %}